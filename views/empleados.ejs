<!DOCTYPE html>
<html lang="es">
<head>

    <meta charset="UTF-8">
    <title>Empleados</title>
    <style>
        /* Estilos básicos para la tabla y el formulario */
        table {
            width: 100%;
            border-collapse: collapse;
        }
        table, th, td {
            border: 1px solid black;
        }
        th, td {
            padding: 8px;
            text-align: left;
        }
        form {
            margin-bottom: 20px;
        }
    </style>
    <!-- Librería toast-->
    <link href="https://cdn.jsdelivr.net/npm/toastr@2.1.4/build/toastr.min.css" rel="stylesheet">
</head>
<body>
    <h1>Gestión de Empleados</h1>
    <form action="/empleados/save" method="POST">
        <input type="hidden" name="id" value="<%= empleadoSeleccionado.id || '' %>">
        <label for="nombre">Nombre:</label>
        <input type="text" name="nombre" id="nombre" value="<%= empleadoSeleccionado.nombre || '' %>" required>
        <label for="puesto">Puesto:</label>
        <input type="text" name="puesto" id="puesto" value="<%= empleadoSeleccionado.puesto || '' %>" required>
        <label for="email">Email:</label>
        <input type="email" name="email" id="email" value="<%= empleadoSeleccionado.email || '' %>" required>
        <button type="submit">Guardar</button>
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Puesto</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
        <% empleados.forEach(empleado => { %>
            <tr>
                <td><%= empleado.id %></td>
                <td><%= empleado.nombre %></td>
                <td><%= empleado.puesto %></td>
                <td><%= empleado.email %></td>
                <td>
                    <a href="/empleados/delete/<%= empleado.id %>">Eliminar</a>
                </td>
            </tr>
        <% }) %>
    </table>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <!-- Librería toast-->
    <script src="https://cdn.jsdelivr.net/npm/toastr@2.1.4/toastr.min.js"></script>
    <!-- Logica de código -->
    <script src="/js/app.js"></script>

</body>
</html>
